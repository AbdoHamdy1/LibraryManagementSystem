@using LMS.ViewModel;
@model List<BookUserViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>National ID</th>
                            <th> Book Name</th>
                            <th>Reserve Date</th>
                            <th>Due Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var user = Model[i];
                            <tr class="table-row">
                                <td>
                                    <span class="order-id">#@(i + 1)</span> <!-- Sequential ID -->
                                </td>
                                <td>
                                    <div class="media align-items-center">
                                        @if (string.IsNullOrEmpty(Model[i].UserImage))
                                        {
                                            <img class="avatar" src="https://th.bing.com/th/id/OIP.Pdl4XwubKnUK09v5u-IVOwHaHa?rs=1&pid=ImgDetMain" alt="Card image cap">
                                        }
                                        else
                                        {
                                            <img class="avatar" src="@Model[i].UserImage" alt="Card image cap">

                                        }
                                        <div class="media-body">
                                            <span class="user-name">@user.UserFirst @user.UserLast</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span>@user.NationalID</span>
                                </td>
                                <td>
                                    <span>@user.BookName</span>
                                </td>
                                <td>
                                    <span>@user.ReserveDate.ToString("dd MMM yyyy")</span>
                                </td>
                                <td>
                                    <span>@user.DueDate.ToString("dd MMM yyyy")</span>
                                </td>
                                <td>
                                    <form method="post" asp-controller="BookUser" asp-action="Return" asp-route-id="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-info">Return</button>
                                    </form>
                                </td>
                            </tr>
                            <tr class="table-divider">
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Table Styles -->
<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #333;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .table thead th {
        border-bottom: 2px solid #ddd;
        text-align: left;
        font-weight: bold;
    }

    .table-divider {
        height: 10px;
        background-color: #f0f0f0;
    }

    .table-row {
        background-color: white;
        border-bottom: 1px solid #e9ecef;
    }

    .table th, .table td {
        padding: 12px 15px;
        vertical-align: middle;
    }

    .order-id {
        font-weight: bold;
        color: #6c757d;
    }

    .media {
        display: flex;
        align-items: center;
    }

    .media-body {
        margin-left: 10px;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .user-name {
        font-size: 16px;
        font-weight: 600;
    }

    .btn-outline-info {
        color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }
</style>
