@model List<Book>

<section class="space-sm flush-with-above">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
        </div>
        <ul class="row feature-list feature-list-sm">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-6">
                    <div class="card">
                        @if (@item.Image != null)
                        {
                            <img class="card-img-top img-cover" src="@item.Image" alt="Card image cap" style="width: 100%; height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <img class="card-img-top" src="/img/rungroopclub.png" alt="Card image cap">
                        }
                        <div class="card-body">
                            <div style="display: flex; align-items: center;">
                            <label style="margin-right: 10px;">Name:</label>
                            <h4 class="card-title">@item.Name</h4>
                        </div>

                        <div style="display: flex; align-items: center;">
                            <label style="margin-right: 10px;">Quantity:</label>
                            <p class="card-text">@item.Status</p>
                        </div>

                        <div style="display: flex; align-items: center;">
                            <label style="margin-right: 10px;">Price:</label>
                            <p class="card-text">@item.Price</p>
                        </div>

                        <div style="display: flex; align-items: center;">
                            <label style="margin-right: 10px;">Language:</label>
                            <p class="card-text">@item.Language</p>
                        </div>
                            @*<p class="card-text">@club.Address.City, @club.Address.State</p>*@
                        </div>
                        <div class="card-footer card-footer-borderless d-flex justify-content-between">
                            <div>
                                <small>@item.Genre</small>
                            </div>
                            <div>
                               
                                <form method="post" asp-controller="Book" asp-action="Borrow" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-info">Borrow</button>
                                </form>
                                <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Book" asp-action="Detail" asp-route-id="@item.Id">
                                    Detail
                                </a>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                {
                                    <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id">
                                        Edit
                                    </a>
                                    <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">
                                        Delete
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </ul>
        <div class="d-flex justify-content-between align-items-center mb-4">
        </div>
    </div>
</section>
<style>
    .img-cover {
        object-fit: cover;
        height: 50px; /* Set your desired height */
        width: 50px%;
    }
</style>